{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    // Best practices
    "strict": true,
    "skipLibCheck": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Nodejs customization
    "outDir": "./dist"
  }
  ,
  "exclude": [
    "node_modules",
    "src/seeder",
    "src/orm/generated/prisma",
    "dist"
  ]
}
