{
    "name": "mayavriksh-backend-admin",
    "version": "1.0.0",
    "description": "Backend service for the Super Admin panel of Mayavriksh",
    "author": "lesorc",
    "license": "ISC",
    "type": "module",
    "main": "src/server.ts",
    "scripts": {
        "dev": "bun --watch src/server.ts",
        "start": "bun run src/server.ts",
        "lint": "eslint . --ext .js,.ts",
        "format": "prettier --write .",
        "prisma": "prisma",
        "prisma:generate": "prisma generate --no-engine",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio",
        "seed:all": "bun run src/seeder/scripts/index.seeder.ts",
        "seed:serial_trackers": "bun run src/seeder/scripts/serialtracker.seeder.ts",
        "seed:roles": "bun run src/seeder/scripts/roles.seeder.ts",
        "seed:warehouses": "bun run src/seeder/scripts/warehouses.seeder.ts",
        "seed:users": "bun run src/seeder/scripts/users/users.seeder.ts",
        "seed:tags": "bun run src/seeder/scripts/tags.seeder.ts",
        "seed:colors": "bun run src/seeder/scripts/colors.seeder.ts",
        "seed:plants": "bun run src/seeder/scripts/plants.seeder.ts",
        "seed:pot_materials": "bun run src/seeder/scripts/potMaterials.seeder.ts",
        "seed:pots": "bun run src/seeder/scripts/pots.seeder.ts",
        "seed:fertilizers": "bun run src/seeder/scripts/fertilizers.seeder.ts",
        "seed:purchase_order": "bun run src/seeder/scripts/purchaseOrder.seeder.ts",
        "seed:warehouse_inventory": "bun run src/seeder/scripts/warehouseInventory.seeder.ts",
        "seed:plant_category": "bun run src/seeder/scripts/plantCategory.seeder.ts",
        "send_grid_email": "bun run src/utils/sendgrid.ts",
        "nodemailer_email": "bun run src/utils/email.util.ts",
        "postinstall": "prisma generate --no-engine"
    },
    "prisma": {
        "schema": "src/orm/prisma/schema.prisma"
    },
    "dependencies": {
        "@hapi/hapi": "^21.4.2",
        "@hapi/inert": "^7.1.0",
        "@hapi/vision": "^7.0.3",
        "@prisma/client": "^6.15.0",
        "@prisma/extension-accelerate": "^2.0.2",
        "@sendgrid/mail": "^8.1.5",
        "axios": "^1.11.0",
        "bcrypt": "^6.0.0",
        "cloudinary": "^2.7.0",
        "dotenv": "^17.2.1",
        "fluent-ffmpeg": "^2.1.3",
        "hapi-swagger": "^17.3.2",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.1",
        "mysql2": "^3.14.3",
        "nodemailer": "^7.0.5",
        "papaparse": "^5.5.3",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/node": "^24.3.1",
        "nodemon": "^3.1.4",
        "prettier": "^3.6.2",
        "prisma": "^6.15.0",
        "typescript": "^5.9.2"
    }
}
